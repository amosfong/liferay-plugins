<?xml version="1.0"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

	<!-- Destinations -->

	<bean id="destination.spi_status" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="liferay/spi_status" />
	</bean>

	<!-- Listeners -->

	<bean id="messageListener.spi_background_task_status" class="com.liferay.portal.resiliency.spi.backgroundtask.messaging.SPIBackgroundTaskStatusMessageListener" />
	<bean id="messageListener.spi_restart" class="com.liferay.portal.resiliency.spi.monitor.messaging.SPIRestartMessageListener" />
	<bean id="messageListener.spi_status_notification" class="com.liferay.portal.resiliency.spi.monitor.messaging.SPIStatusStoppedNotificationMessageListener" />

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="destinations">
			<list>
				<ref bean="destination.spi_status" />
			</list>
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/background_task_status">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.spi_background_task_status" />
					</list>
				</entry>
				<entry key="liferay/spi_status">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.spi_restart" />
						<ref bean="messageListener.spi_status_notification" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>