<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<icon>/icons/admin.png</icon>
		<configuration-action-class>com.liferay.reports.admin.action.ConfigurationActionImpl</configuration-action-class>
		<portlet-data-handler-class>com.liferay.reports.lar.AdminPortletDataHandler</portlet-data-handler-class>
		<control-panel-entry-category>site_administration.configuration</control-panel-entry-category>
		<control-panel-entry-weight>13.5</control-panel-entry-weight>
		<preferences-unique-per-layout>false</preferences-unique-per-layout>
		<header-portlet-css>/admin/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/admin/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>reports-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<icon>/icons/display.png</icon>
		<header-portlet-css>/admin/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/admin/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>reports-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>