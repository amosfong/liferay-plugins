<?xml version="1.0"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

	<!-- Destinations -->

	<bean id="destination.reports_admin" class="com.liferay.portal.kernel.messaging.SerialDestination">
		<property name="name" value="liferay/reports_admin" />
	</bean>
	<bean id="destination.reports_scheduler_event" class="com.liferay.portal.kernel.messaging.ParallelDestination">
		<property name="name" value="liferay/reports_scheduler_event" />
	</bean>

	<!-- Listeners -->

	<bean id="messageListener.hot_deploy" class="com.liferay.reports.admin.messaging.AdminHotDeployListener">
		<constructor-arg name="servletContextNames">
			<array>
				<bean class="com.liferay.reports.service.ClpSerializer" factory-method="getServletContextName" />
			</array>
		</constructor-arg>
	</bean>
	<bean id="messageListener.reports_admin" class="com.liferay.reports.messaging.AdminMessageListener" />
	<bean id="messageListener.reports_scheduler_event" class="com.liferay.portal.kernel.scheduler.messaging.SchedulerEventMessageListenerWrapper">
		<property name="className" value="com.liferay.reports.messaging.SchedulerEventMessageListener" />
		<property name="messageListener">
			<bean class="com.liferay.reports.messaging.SchedulerEventMessageListener" />
		</property>
	</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="destinations">
			<list>
				<ref bean="destination.reports_admin" />
				<ref bean="destination.reports_scheduler_event" />
			</list>
		</property>
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/hot_deploy">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.hot_deploy" />
					</list>
				</entry>
				<entry key="liferay/reports_admin">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.reports_admin" />
					</list>
				</entry>
				<entry key="liferay/reports_scheduler_event">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.reports_scheduler_event" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>